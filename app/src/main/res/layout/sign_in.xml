<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="270dp"
        app:boxBackgroundMode="outline">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="@drawable/custom_radius"
            android:fontFamily="@font/cardo_regular"
            android:layout_marginTop="270dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/cardo_regular"
        android:layout_below="@id/emailTextLayout"
        app:boxBackgroundMode="outline">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_tv"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_below="@id/email_tv"
            android:background="@drawable/custom_radius"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/Forgotpassword_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordTextLayout"
        android:layout_alignEnd="@+id/passwordTextLayout"
        android:text="Forgot Password?"
        android:textColor="@color/dark_pink"
        android:textSize="14sp"
        android:fontFamily="@font/cardo_regular"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@id/Forgotpassword_tv"
        android:fontFamily="@font/cardo_regular"
        android:textColor="@color/white"
        android:backgroundTint="@color/maroon"
        />

<TextView
    android:id="@+id/don_t_have_sign_up_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/login_btn"
        android:text="Don't have an account? Sign up"
        android:gravity="top"
        android:textColor="@color/dark_pink"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:fontFamily="@font/cardo_regular"
        />


    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="199dp"
        android:layout_below="@id/don_t_have_sign_up_tv"
        android:layout_marginTop="530dp"
        android:fontFamily="@font/cardo_regular"
        android:gravity="top"
        android:text="or"
        android:textColor="@color/dark_pink"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Login_with_Google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="595dp"
        android:layout_below="@+id/or"
        android:fontFamily="@font/cardo_regular"
        android:gravity="top"
        android:text="Login with Google"
        android:textColor="@color/dark_pink"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/beauty"
        android:layout_width="100dp"
        android:layout_height="90.13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/beauty"
        android:gravity="center" />
</RelativeLayout>